{
  "compilerOptions": {
    "target":"ES2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization":false,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./",
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/request/aircloset": ["src/layers/axios-utils/nodejs/request/aircloset"],
      "/opt/nodejs/slack": ["src/layers/slack-utils/nodejs/slack"],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}